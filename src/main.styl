@import 'nib'

#hi-backbone-login
	.overlay
		position fixed
		left 0
		right 0
		top 0
		bottom 0
		background rgba(0, 0, 0, 0.7)	
		
	.modal
		position fixed
		top 50%
		left 50%
		margin-top -100px
		margin-left -100px
		height 200px
		width 200px
		background white
		border-radius 3px
		padding 20px
		box-sizing border-box
		